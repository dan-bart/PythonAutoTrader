{% extends "index.html.j2" %}


{% block body %}
<table id = "example" class = "table table-bordered">
  <thead>
    <tr>
        <th>ticker</th>
        <th>owned</th>
        <th>avg_buy</th>
        <th>last_hour</th>
        <th>hourly_state</th>
    
    </tr>
  </thead>
 </table> 

<script type = "text/javascript">
$('#example').dataTable({
   "data": {{ dataframe  }},
   "columns": [
      { 
         "data": "ticker",
         "render": function(data, type, row, meta){
            if(type === 'display'){
                data = '<a href="portfolio/' + data + '">' + data + '</a>';
            }
            
            return data;
         }
      },
      { "data": "owned" }, 
      { "data": "avg_buy" }, 
      { "data": "last_hour" }, 
      { "data": "hourly_state" }

   ]
});
</script>

{% endblock %}